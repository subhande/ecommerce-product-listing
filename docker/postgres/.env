# PostgreSQL Primary-Replica Configuration
# Copy to .env and adjust as needed.

POSTGRES_IMAGE=postgres:17
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ecommerce

PRIMARY_CONTAINER=ecommerce-postgres

PRIMARY_PORT=5432
# Replicas use host ports 5433-5437 (assigned automatically by Docker)

REPLICATION_USER=replicator
REPLICATION_PASSWORD=replicator_pass

NETWORK_NAME=ecommerce-postgres-net

# Number of read replicas (min 1, max 5)
REPLICA_COUNT=2

# Synchronous replication mode: async | sync | potential | quorum
SYNC_STATE=async

# REPLICA_START_PORT and REPLICA_END_PORT define the range of host ports for replicas (5433-5437)
REPLICA_START_PORT=5433
REPLICA_END_PORT=5434
